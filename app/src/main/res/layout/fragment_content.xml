<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.linsaya.heima_zhbj_01.view.NoScrollViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"></com.linsaya.heima_zhbj_01.view.NoScrollViewPager>

    <RadioGroup
        android:id="@+id/rg_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_tab_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home"
            style="@style/style_tab_radiobtn"
            android:checked="true"
            android:drawableTop="@drawable/selector_tab_home"
            android:text="首页" />

        <RadioButton
            android:id="@+id/rb_newscenter"
            style="@style/style_tab_radiobtn"
            android:drawableTop="@drawable/selector_tab_newscenter"
            android:text="新闻中心" />

        <RadioButton
            android:id="@+id/rb_smartservice"
            style="@style/style_tab_radiobtn"
            android:drawableTop="@drawable/selector_tab_smartservice"
            android:text="智慧服务" />

        <RadioButton
            android:id="@+id/rb_govaffairs"
            style="@style/style_tab_radiobtn"
            android:drawableTop="@drawable/selector_tab_govaffairs"
            android:text="政务" />

        <RadioButton
            android:id="@+id/rb_setting"
            style="@style/style_tab_radiobtn"
            android:drawableTop="@drawable/selector_tab_setting"
            android:text="设置" />
    </RadioGroup>
</LinearLayout>
